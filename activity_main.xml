<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="513dp"
        android:layout_height="87dp"

        android:paddingLeft="55px"
        android:paddingTop="12px"
        android:shadowDy="12"
        android:text="DELL SERVICES"
        android:textAllCaps="true"
        android:textColor="#330C74"
        android:textSize="36sp"
        android:textStyle="bold|italic" />




    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="67dp"

        android:onClick="load1"
        android:text="RECOMMENDED  PRODUCTS"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:onClick="recc"
        android:text="YOU MAY ALSO BUY"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:text="Write your comments here"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUBMIT COMMENTS"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        android:onClick="func1"/>



</LinearLayout>



